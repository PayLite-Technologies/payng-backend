# Server
NODE_ENV=development
PORT=3000
HOST=localhost
FRONTEND_URL=http://localhost:5173

# Database (Use Vercel Postgres or Neon for production)
DATABASE_URL=postgresql://user:pass@localhost:5432/payng

# Authentication
SESSION_SECRET=change-this-64-char-secret-in-production-use-openssl-rand-hex-64
JWT_SECRET=change-this-jwt-secret-key-use-openssl-rand-hex-32

# Payment Gateways
ARCA_API_KEY=your-arca-api-key
ARCA_SECRET_KEY=your-arca-secret
ARCA_BASE_URL=https://api.arca.africa
ARCA_WEBHOOK_SECRET=your-webhook-secret

FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK-xxxxx
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TESTxxxxx

# Notifications
RESEND_API_KEY=re_xxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@payng.ng

SMS_PROVIDER=termii
SMS_API_KEY=your-termii-key
SMS_SENDER_ID=Payng

WHATSAPP_API_KEY=your-whatsapp-key
WHATSAPP_BUSINESS_ID=your-business-id

# File Uploads
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
ENCRYPTION_KEY=32-character-key-for-aes-encryption-use-openssl

# Cron (Vercel Cron uses vercel.json instead)
ENABLE_CRON=true
PAYMENT_REMINDER_CRON=0 9 * * *
FEE_STATUS_CHECK_CRON=0 8 * * *
CRON_SECRET=your-vercel-cron-secret-key

# Logging
LOG_LEVEL=info
